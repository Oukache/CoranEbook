<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 android:id="@+id/sliding_pane_layout"
											 android:layout_width="match_parent"
											 android:layout_height="match_parent" >

	<!-- Menu Lateral -->
	<LinearLayout
		android:layout_width="180dp"
		android:layout_height="fill_parent"
		android:background="@drawable/bg_linearlayout" >

		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scrollbars="none" >

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical" >

				<Button
					android:id="@id/sourate_btn"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:background="@drawable/bg_select"
					android:paddingBottom="20dp"
					android:paddingTop="20dp"
					android:text="Sourate"
					android:textColor="#ffffff"
					android:onClick="onSourate"/>

				<Button
					android:id="@id/favoris_btn"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:background="@drawable/bg_select"
					android:paddingBottom="20dp"
					android:paddingTop="20dp"
					android:text="Favoris"
					android:textColor="#ffffff"
					android:onClick="onFavoris"/>

				<Button
					android:id="@id/doua_btn"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:background="@drawable/bg_select"
					android:paddingBottom="20dp"
					android:paddingTop="20dp"
					android:text="Doua"
					android:textColor="#ffffff"
					android:onClick="onDoua"/>

				<Button
					android:id="@id/hadiths_btn"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:background="@drawable/bg_select"
					android:paddingBottom="20dp"
					android:paddingTop="20dp"
					android:text="Hadiths"
					android:textColor="#ffffff"
					android:onClick="onHadiths"/>

				<Button
					android:id="@id/settings_btn"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:background="@drawable/bg_select"
					android:paddingBottom="20dp"
					android:paddingTop="20dp"
					android:text="Settings"
					android:textColor="#ffffff"
					android:onClick="onSettings"/>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/layout_frame"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >
	</RelativeLayout>

</android.support.v4.widget.SlidingPaneLayout>